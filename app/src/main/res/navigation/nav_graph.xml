<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="tech.apps.music.ui.fragments.HomeFragment"
        android:label="main_fragment"
        tools:layout="@layout/main_fragment">

    </fragment>

    <fragment
        android:id="@+id/songFragment"
        android:name="tech.apps.music.ui.fragments.SongFragment"
        android:label="fragment_song"
        tools:layout="@layout/fragment_song">

        <action
            android:id="@+id/action_songFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@anim/down"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <action
        android:id="@+id/globalActionToSongFragment"
        app:destination="@+id/songFragment"
        app:enterAnim="@anim/up"
        app:exitAnim="@android:anim/fade_out"
        app:popEnterAnim="@android:anim/fade_in"
        app:popExitAnim="@anim/down" />

</navigation>