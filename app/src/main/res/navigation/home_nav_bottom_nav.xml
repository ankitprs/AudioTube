<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_nav_bottom_nav"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/searchFragment"
        android:name="tech.apps.music.ui.fragments.SearchFragment"
        android:label="search_fragment"
        tools:layout="@layout/search_fragment" />
    <fragment
        android:id="@+id/libraryFragment"
        android:name="tech.apps.music.ui.fragments.LibraryFragment"
        android:label="library_fragment"
        tools:layout="@layout/library_fragment" >
        <action
            android:id="@+id/action_libraryFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="tech.apps.music.ui.fragments.HomeFragment"
        android:label="main_fragment"
        tools:layout="@layout/main_fragment" >

        <action
            android:id="@+id/action_homeFragment2_to_searchFragment"
            app:destination="@id/searchFragment" />
    </fragment>
    <fragment
        android:id="@+id/songFragment"
        android:name="tech.apps.music.ui.fragments.SongFragment"
        android:label="fragment_song"
        tools:layout="@layout/fragment_song" />

    <action
        android:id="@+id/action_homeFragment2_to_songFragment2"
        app:destination="@+id/songFragment"
        app:enterAnim="@anim/up"
        app:exitAnim="@android:anim/fade_out"
        app:popEnterAnim="@android:anim/fade_in"
        app:popExitAnim="@anim/down" />
</navigation>