<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="?attr/materialCardViewFilledStyle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardCornerRadius="0dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical"
        android:padding="3dp">


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp">

            <ImageView
                android:id="@+id/thumbnailImageTYVideoVert"
                android:layout_width="240dp"
                android:layout_height="135dp"
                android:scaleType="centerCrop"
                android:src="@color/one_level_up" />

            <TextView
                android:id="@+id/durationTYVideoVert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:layout_margin="4dp"
                android:background="@color/black"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:text="00:00"
                android:textColor="@color/white"
                tools:ignore="HardcodedText" />

        </androidx.cardview.widget.CardView>

        <ProgressBar
            android:id="@+id/determinateBarVert"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="220dp"
            android:layout_height="3dp"
            android:layout_gravity="center"
            android:layout_marginTop="1dp"
            android:progress="25"
            android:progressTint="@color/button_color" />

        <TextView
            android:id="@+id/titleTYVideoVert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:maxHeight="35sp"
            android:textColor="@color/white"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/channelTYVideoVert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:textColor="@color/grey"
            tools:ignore="HardcodedText" />
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>